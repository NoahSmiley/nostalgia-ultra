// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL")
}

model User {
  id              String                @id @default(cuid())
  username        String                @unique
  email           String                @unique
  password        String?
  inviteCodeId    String?
  inviteCode      InviteCode?           @relation("UsedInviteCode", fields: [inviteCodeId], references: [id])
  microsoftId     String?               @unique
  displayName     String?
  xboxGamertag    String?
  isAdmin         Boolean               @default(false)
  minecraftLink   MinecraftAccount?
  subscriptions   Subscription[]
  createdInvites  InviteCode[]          @relation("CreatedInvites")
  createdVouchers SubscriptionVoucher[] @relation("CreatedVouchers")
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
}

model InviteCode {
  id          String   @id @default(cuid())
  code        String   @unique
  maxUses     Int      @default(1)
  uses        Int      @default(0)
  active      Boolean  @default(true)
  createdBy   User?    @relation("CreatedInvites", fields: [createdById], references: [id])
  createdById String?
  note        String?  // Optional note to remember who this code is for
  createdAt   DateTime @default(now())
  users       User[]   @relation("UsedInviteCode")
}

model MinecraftAccount {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique
  mcUuid     String   @unique
  mcUsername String
  linkedAt   DateTime @default(now())
}

model Subscription {
  id                String    @id @default(cuid())
  user              User      @relation(fields: [userId], references: [id])
  userId            String
  stripeCustomerId  String?   @unique // Nullable for voucher-based subscriptions
  stripeSubId       String?   @unique
  status            String
  tier              String    @default("member") // "member" or "ultra"
  monthlyAmount     Int
  currentPeriodEnd  DateTime?
  cancelAtPeriodEnd Boolean   @default(false)
  voucherId         String?   // If subscription was created via voucher
  voucher           SubscriptionVoucher? @relation(fields: [voucherId], references: [id])
  isLifetime        Boolean   @default(false) // Lifetime subscriptions never expire
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model SubscriptionVoucher {
  id            String         @id @default(cuid())
  code          String         @unique
  type          String         // "time_limited" or "lifetime"
  tier          String         // "member" or "ultra"
  durationDays  Int?           // Duration in days for time_limited vouchers (null for lifetime)
  maxUses       Int            @default(1)
  uses          Int            @default(0)
  active        Boolean        @default(true)
  note          String?        // Admin note
  createdBy     User?          @relation("CreatedVouchers", fields: [createdById], references: [id])
  createdById   String?
  expiresAt     DateTime?      // Optional expiration for the voucher itself
  createdAt     DateTime       @default(now())
  redemptions   Subscription[]
}

model ModpackVersion {
  id          String   @id @default(cuid())
  version     String   @unique
  commitSha   String
  releasedAt  DateTime @default(now())
  changelogMd String
}
